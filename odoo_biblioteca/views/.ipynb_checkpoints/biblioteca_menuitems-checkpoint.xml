<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record model="ir.actions.act_window" id="book_list_action">
        <field name="name">Books</field>
        <field name="res_model">biblioteca.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Insert first book
            </p>
        </field>
        
    </record>
    <record model="ir.actions.act_window" id="renta_list_action">
        <field name="name">Alquileres</field>
        <field name="res_model">biblioteca.renta</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay alquileres
            </p>
        </field>
    </record>

    <menuitem name="Odoo Biblioteca"
              id="menu_biblioteca"
              sequence="1"/>
      
    <menuitem name="Odoo Biblioteca"
              id="menu_biblioteca_sub"
              parent="menu_biblioteca"
              sequence="2"/>
      
    <menuitem name="Books"
              id="menu_biblioteca_books"
              parent="menu_biblioteca_sub"
              sequence="3"
              action="book_list_action"/>
      
    <menuitem name="Rentas"
              id="menu_biblioteca_rentas"
              parent="menu_biblioteca_sub"
              sequence="4"
              action="renta_list_action"/>
  
    </data>
</odoo>